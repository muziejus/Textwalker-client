{
  "space": true,
  "prettier": true,
  "parser": "babel-eslint",
  "overrides": [
    {
      "files": ["tests/*/steps/*/*.js", "tests/*/steps/*.js"],
      "rules": {
        "prefer-arrow-callback": "off",
        "capitalized-comments": "off",
        "import/extensions": "off",
        "import/no-anonymous-default-export": "off",
        "promise/prefer-await-to-then": "off"
      }
    }
  ]
}
