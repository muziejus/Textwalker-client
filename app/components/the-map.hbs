<LeafletMap 
  @lat={{this.theMap.defaultOptions.lat}} 
  @lng={{this.theMap.defaultOptions.lng}} 
  @maxZoom={{this.theMap.defaultOptions.maxZoom}}
  @minZoom={{this.theMap.defaultOptions.minZoom}}
  @zoom={{this.theMap.defaultOptions.zoom}} 
  @zoomControl={{this.theMap.defaultOptions.zoomControl}}
  id={{this.divId}} 
  class="the-map"
  as |layers|
  >
  <layers.tile 
    @url={{this.theMap.tileURL}}
    @attribution={{this.theMap.tileAttribution}}
  />
</LeafletMap>
