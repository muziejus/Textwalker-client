<aside class="place-drawer {{unless this.visible "hidden"}} border-solid border-4 border-gray-600">
<h3 class="text-xl">place drawer</h3>
  {{yield}}
  <LeafletMap @lat={{this.lat}} @lng={{this.lng}} @zoom={{this.zoom}} as |layers|>
    <layers.tile 
      @url="https://stamen-tiles-{s}.a.ssl.fastly.net/terrain-background/{z}/{x}/{y}{r}.png"
      @subdomains="abcd"
      @minZoom={{0}}
      @maxZoom={{18}}
      @attribution="Map tiles by <a href='http://stamen.com'>Stamen Design</a>, <a href='http://creativecommons.org/licenses/by/3.0'>CC BY 3.0</a> &mdash; Map data &copy; <a href='https://www.openstreetmap.org/copyright'>OpenStreetMap</a> contributors"
      />

    {{#each this.markers as |marker|}}
      <layers.marker @location={{marker.location}} as |layer|>
          <layer.popup>
            {{marker.name}}
          </layer.popup>
      </layers.marker>
    {{/each}}

    

  </LeafletMap>
</aside>
