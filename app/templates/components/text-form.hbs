<div id="text-form">
  <p>
    <CreateButton 
      @buttonText="Text" 
      @action={{this.createText}} 
      @classes="create-text-button" />
  </p>
  <p>{{input id="input-name" type="text" value=this.newText.name placeholder="Name"}}</p>
  <p>{{input id="input-slug" type="text" value=this.newText.slug placeholder="Slug"}}</p>
  <p>{{input id="input-entrySort" type="text" value=this.newText.entrySort placeholder="entrySort"}}</p>
</div>

  
