{{#if @shown}}
  {{#paper-dialog class="flex-77" onClose=(action @close "cancel") origin=dialogOrigin clickOutsideToClose=true}}
    {{#paper-toolbar}}
      {{#paper-toolbar-tools}}
        {{#if this.githubUser}}
          <h2>Hello, @{{this.githubUser.login}}!</h2>
        {{else}}
          <h2>Hello, Contributor!</h2>
        {{/if}}
        <span class="flex"></span>
        {{#paper-button iconButton=true onClick=(action @close "cancel")}}{{paper-icon icon="close"}}{{/paper-button}}
      {{/paper-toolbar-tools}}
    {{/paper-toolbar}}

    {{#paper-dialog-content}}
      {{#if this.session.isAuthenticated }}
        <p>Sup, {{this.githubUser.name}}.</p>
      {{else}}
        <p>Welcome to Wandertext. Use the button below to log in via GitHub.  If
          you are an approved contributor, you will be forwarded to your
          contributor profile.  If you believe you should be an approved
          contributor but are not yet, please contact Manan.</p>

        <div class="layout-row layout-align-center-center">
          {{#paper-button raised=true primary=true onClick=this.login}}
            {{fa-icon "github" prefix="fab"}}
            Log In via GitHub
          {{/paper-button}}
        </div>
      {{/if}}
    {{/paper-dialog-content}}
  {{/paper-dialog}}
{{/if}}
