{{#if hasBlock}}
  {{yield}}
{{else}}
  {{#if @field}}
  {{!#if (in-arr textFields @field)}}
    <input
      type={{@field}}
      value={{@value}}
      class="ember-inline-edit-input {{@editorClass}}"
      oninput={{@on-update value="target.value"}}
      style={{@fieldWidth}} />
  {{!else if (in-arr textAreaFields field)}}
    <!-- <textarea -->
    <!--   value={{@value}} -->
    <!--   class="ember-inline-edit-input {{@editorClass}}" -->
    <!--   oninput={{@on-update value="target.value"}}> -->
    <!-- </textarea> -->
  {{/if}}
{{/if}}

<div class="ember-inline-button-container {{@buttonContainerClass}}">
  {{#if @showSaveButton}}
    <button
      {{action @on-save bubbles=false}}
      class="ember-inline-edit-save {{@saveButtonClass}}">
      {{@saveLabel}}
    </button>
  {{/if}}

  {{#if @showCancelButton}}
    <button
      {{action @on-cancel bubbles=false}}
      class="ember-inline-edit-cancel {{@cancelButtonClass}}">
      {{@cancelLabel}}
    </button>
  {{/if}}
</div>

{{#if @hintLabel}}
  <span class="hint">{{{@hintLabel}}}</span>
{{/if}}
