{
  "name": "wandertext",
  "version": "0.6.0",
  "private": true,
  "description": "Create and share semantically rich geospatial datasets",
  "license": "GPL-3.0",
  "author": "Moacir P. de SÃ¡ Pereira <moacir.p@columbia.edu> (http://moacir.com)",
  "directories": {
    "doc": "doc",
    "test": "tests"
  },
  "homepage": "https://github.com/muziejus/wandertext#readme",
  "repository": "https://github.com/muziejus/wandertext.git",
  "scripts": {
    "deploy": "ember build -e production && firebase deploy",
    "build": "ember build",
    "lint:hbs": "ember-template-lint .",
    "lint:js": "xo --fix",
    "start": "ember serve",
    "test": "ember test",
    "release": "standard-version --dry-run"
  },
  "devDependencies": {
    "@ember/optional-features": "^1.3.0",
    "@ember/test-helpers": "^1.6.1",
    "@fullhuman/postcss-purgecss": "^1.3.0",
    "@glimmer/component": "^1.0.0",
    "@glimmer/tracking": "^1.0.0",
    "babel-eslint": "^10.0.3",
    "broccoli-asset-rev": "^3.0.0",
    "chai-as-promised": "^7.1.1",
    "chai-dom": "^1.8.1",
    "ember-apollo-client": "^2.0.0-beta.5",
    "ember-auto-import": "^1.5.2",
    "ember-bind-helper": "^1.0.0",
    "ember-cli": "3.15.1",
    "ember-cli-app-version": "^3.2.0",
    "ember-cli-babel": "^7.11.1",
    "ember-cli-chai": "^0.5.0",
    "ember-cli-code-coverage": "^0.4.2",
    "ember-cli-dependency-checker": "^3.0.0",
    "ember-cli-dependency-lint": "^1.1.3",
    "ember-cli-deprecation-workflow": "^1.0.1",
    "ember-cli-dotenv": "^3.0.1",
    "ember-cli-eslint": "^5.0.0",
    "ember-cli-htmlbars": "^4.0.5",
    "ember-cli-inject-live-reload": "^2.0.1",
    "ember-cli-mirage": "^1.1.3",
    "ember-cli-mirage-graphql": "^0.2.2",
    "ember-cli-moment-shim": "^3.7.1",
    "ember-cli-postcss": "^5.0.0",
    "ember-cli-showdown": "^4.4.4",
    "ember-cli-sri": "^2.1.1",
    "ember-cli-template-lint": "^1.0.0-beta.3",
    "ember-cli-uglify": "^3.0.0",
    "ember-composable-helpers": "^2.3.1",
    "ember-concurrency": "^1.0.0",
    "ember-concurrency-decorators": "^1.0.0-beta.2",
    "ember-d3": "^0.5.1",
    "ember-data": "^3.14.0",
    "ember-export-application-global": "^2.0.0",
    "ember-fetch": "^7.0.0",
    "ember-href-to": "^3.1.0",
    "ember-load-initializers": "^2.1.0",
    "ember-maybe-import-regenerator": "^0.1.6",
    "ember-mocha": "^0.16.0",
    "ember-modal-dialog": "^3.0.0-beta.4",
    "ember-moment": "^8.0.0",
    "ember-notify": "^6.0.0",
    "ember-resolver": "^7.0.0",
    "ember-responsive": "^3.0.5",
    "ember-simple-auth": "^2.1.1",
    "ember-source": "^3.14.1",
    "ember-svg-jar": "^2.2.1",
    "ember-table": "^2.2.1",
    "ember-tooltips": "^3.3.3",
    "eslint-plugin-chai-friendly": "^0.5.0",
    "eslint-plugin-ember": "^7.1.0",
    "eslint-plugin-node": "^11.0.0",
    "faker": "^4.1.0",
    "get-graphql-schema": "^2.1.2",
    "ghooks": "^2.0.4",
    "graphql": "^14.5.7",
    "handlebars": "^4.4.3",
    "loader.js": "^4.7.0",
    "postcss-import": "^12.0.1",
    "standard-version": "^7.0.0",
    "tailwindcss": "^1.1.2",
    "torii": "^0.10.1",
    "xo": "^0.25.3"
  },
  "engines": {
    "node": "8.* || >= 10.*"
  },
  "dependencies": {
    "leaflet": "^1.4.0",
    "lodash": "^4.17.15"
  },
  "xo": {
    "envs": [
      "amd",
      "browser"
    ],
    "globals": [],
    "prettier": true,
    "parser": "babel-eslint",
    "parserOptions": {
      "ecmaVersion": 2017,
      "sourceType": "module"
    },
    "extends": [
      "plugin:ember/recommended"
    ],
    "plugins": [
      "chai-friendly",
      "ember"
    ],
    "space": 2,
    "rules": {
      "require-await": 0,
      "no-unused-expressions": 0,
      "chai-friendly/no-unused-expressions": 2,
      "import/extensions": [
        "error",
        "never",
        {
          "graphql": "always"
        }
      ],
      "import/no-unresolved": 0,
      "import/no-extraneous-dependencies": 1
    },
    "overrides": [
      {
        "files": "tests/**/*-test.js",
        "envs": [
          "mocha"
        ],
        "rules": {
          "prefer-arrow-callback": 0
        }
      },
      {
        "files": [
          "ember-cli-build.js",
          "testem.js",
          "blueprints/*/index.js",
          "config/**/*.js",
          "lib/*/index.js"
        ],
        "parserOptions": {
          "sourceType": "script",
          "ecmaVersion": 2015
        },
        "envs": [
          "node"
        ]
      }
    ]
  },
  "prettier": {
    "singleQuote": false,
    "bracketSpacing": true
  },
  "config": {
    "ghooks": {
      "pre-commit": "yarn lint:js",
      "pre-push": "yarn test"
    }
  },
  "optionalDependencies": {
    "broccoli-funnel": "^3.0.1",
    "chai": "^4.2.0",
    "d3-array": "^2.3.2",
    "d3-axis": "^1.0.12",
    "d3-scale": "^3.1.0",
    "d3-selection": "^1.4.0",
    "mocha": "^6.1.4",
    "rsvp": "^4.8.5",
    "showdown": "^1.9.0"
  },
  "resolutions": {
    "ember-cli/portfinder": "1.0.21"
  }
}
